<h1>Cocktails#index</h1>
<% @cocktails.each do |cocktail| %>
  <h2><%= cocktail.name %></h2>
  <h3>Ingredients</h3>
  <ul>
    <% cocktail.cocktails_ingredients.each do |component| %>
      <li><%= component.ingredient.name %> (<%= component.quantity %> <%=component.measurement %>)</li>
    <% end %>
  </ul>
  <h3>Tools</h3>
  <ul>
    <% cocktail.tools.each do |tool| %>
    <li><%= tool.name %></li>
    <% end %>
  </ul>
<% end %>